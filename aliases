alias open=xdg-open

alias pdf='mupdf'

alias ta='tmux attach'

alias clip='xclip -sel clip'
#alias clip='pbcopy' # OS X

alias t=tmux
alias vim=nvim
alias svim="sudo -EPS nvim"
alias ncgrep="grep --color=never"

alias clock="date +'%A %r'"

volume () { amixer sset Master $1% }
backlight () { sudo xbacklight $1 }

suspend () { slock systemctl suspend -i }
hibernate () { systemctl hibernate }
hybrid-sleep () { systemctl hybrid-sleep }

alias l="ls -1"
alias ll="ls -lh"
alias lll="ls -lAh"
alias gpa="git remote | xargs -IR git push R"
alias grm="                          \
  git checkout master                \
  && git pull --rebase origin master \
  && git checkout -                  \
  && git rebase master               \
"
alias grump="                        \
  git checkout master                \
  && git pull --rebase origin master \
  && git checkout -                  \
  && git rebase master               \
  && git push --force                \
"

function zg {
  2>&1 _z $(git rev-parse --show-toplevel) $@
  return 0
}

source ~/.aliases.xq
if [[ -s ~/.aliases.$(hostname) ]]; then
  source ~/.aliases.$(hostname)
fi

function docker-bomb {
  docker rmi -f $(docker images -q)
  docker rm $(docker ps -aq)
  return 0
}
