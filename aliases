alias open=xdg-open

alias pdf='mupdf'

alias ta='tmux attach'

alias clip='xclip -sel clip'
#alias clip='pbcopy' # OS X

alias t=tmux
alias vim=nvim
alias svim="sudo -EPS nvim"
alias ncgrep="grep --color=never"

alias clock="date +'%A %r'"

volume () { amixer sset Master $1% }
backlight () { sudo xbacklight $1 }

suspend () { slock systemctl suspend -i }
hibernate () { systemctl hibernate }
hybrid-sleep () { systemctl hybrid-sleep }

alias l="ls -1"
alias ll="ls -lh"
alias lll="ls -lAh"

alias mkpw="head -c512 /dev/urandom | sha512sum | cut -d' ' -f1"

unalias grm # TODO: migrate off omz; keep only the aliases that I use
unalias gf  # TODO: migrate off omz...

function gf () {
  git fetch $* 'refs/heads/*:refs/heads/*'
}

alias gwd="git diff --word-diff=color"
alias gbc="git rev-parse --abbrev-ref HEAD" # git-branch-current

function grm () {
  git checkout master
  git pull --rebase origin master
  git checkout -
  git rebase master
}

function grump () {
  git checkout master
  git pull --rebase origin master
  git checkout -
  git rebase master
  git fetch --prune origin
  git push --force-with-lease
}

function zg {
  2>&1 _z $(git rev-parse --show-toplevel) $@
  return 0
}

source ~/.aliases.xq
if [[ -s ~/.aliases.$(hostname) ]]; then
  source ~/.aliases.$(hostname)
fi

function docker-bomb () {
  docker system prune --volumes -a
}

alias dd='dd status=progress'
