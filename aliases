alias open=xdg-open

alias pdf=mupdf

alias ta="tmux attach"

alias clip="xclip -sel clip"

alias vim=nvim
alias svim="sudo -EPS nvim"


alias clock="date +'%A %r'"

alias l="ls -1"
alias ll="ls -lh"
alias lll="ls -lAh"

alias dd='dd status=progress'

alias mkpw="head -c512 /dev/urandom | sha512sum | cut -d' ' -f1"

alias gwd="git diff --word-diff=color"
alias gbc="git rev-parse --abbrev-ref HEAD" # git-branch-current
alias glom="git pull --rebase origin master"

function gtfo () {( # get the fucking origin
  remote=${1:-origin}
  if [ $# -gt 0 ]; then shift; fi
  git fetch ${remote} $* "refs/heads/*:refs/remotes/${remote}/*"
)}

function glomp () {(
  set -ex
  git pull --rebase origin master
  local branch=$(git rev-parse --abbrev-ref HEAD) # git-current-branch
  git push --force-with-lease --set-upstream origin ${branch}
)}

function volume () { amixer sset Master $1% }
function suspend () { slock systemctl suspend -i }

function zg {
  2>&1 _z $(git rev-parse --show-toplevel) $@
}

if [[ -s ~/.aliases.${HOST} ]]; then
  source ~/.aliases.${HOST}
fi
