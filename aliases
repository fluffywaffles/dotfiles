#alias ls='ls++'
#alias ls='ls --sort=extension'

alias vim=nvim

alias battery-%="acpi | cut -d, -f2 | tr -d ' %'"
alias battery-state="acpi | cut -d, -f1 | cut -d: -f2 | tr -d ' ' | tr A-Z a-z"

set-volume () { amixer sset Master $1% }

system-sleep () { sudo /usr/lib/systemd/systemd-sleep $1 }

system-suspend () { system-sleep suspend }
system-hibernate () { system-sleep hibernate }
system-hybrid-sleep () { system-sleep hybrid-sleep }
