alias open=xdg-open

alias pdf='evince'

alias glogout='gnome-session-quit --logout --no-prompt'
alias npm-init='npm init -y'

# n: don't read stdin, N: don't run a remote command, T: no tty, D: proxy everything via 1080, o: option, ServerAliveInterval: send a keepalive packet
alias run-proxy='ssh -nNTD 1080 homebase-tunnel -o "ServerAliveInterval 60"'
alias proxy-tmux-bg='tmux neww -n "tunnel" run-proxy'

alias ta='tmux attach'
alias tl='tmux list-w'

alias wviz='watch -n 0.1 -tc $HOME/.functions/viz'

alias clip='xclip -sel clip'
#alias clip='pbcopy' # OS X

